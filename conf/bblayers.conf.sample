# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  ~/rpi-yocto-builds/poky-morty/meta \
  ~/rpi-yocto-builds/poky-morty/meta-poky \
  ~/rpi-yocto-builds/poky-morty/meta-openembedded/meta-oe \
  ~/rpi-yocto-builds/poky-morty/meta-openembedded/meta-systemd \
  ~/rpi-yocto-builds/poky-morty/meta-raspberrypi \
  ~/rpi-yocto-builds/poky-morty/meta-basilisk-ii \
  "
